        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Get Email Ids of affected users.
	var userList = [];
	var affectedUsers = new GlideRecord('x_pqt_impact_manag_m2m_x_pqt_impac_sys_user');
	affectedUsers.addQuery('u_impact',current.sys_id.toString());
	affectedUsers.query();
	while(affectedUsers.next()){
		userList.push(affectedUsers.u_user.toString());
	}
	//trigger the event by passing impact record and affected users list.
	gs.eventQueue('x_pqt_impact_manag.pico.impact.approved', current,userList.toString(),'');



})(current, previous);]]></script>
